{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./build",
        "rootDir": "src"
    },
    "include": ["src/**/*.ts"],
    "exclude": [
        "node_modules",
        "build"
    ],
}